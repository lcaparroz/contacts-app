<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/et_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Insira o nome"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Insira o telefone"
        android:layout_below="@id/et_contact_name"
        android:layout_alignLeft="@id/et_contact_name" />

    <Button
        android:id="@+id/btn_add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Contato"
        android:layout_below="@+id/et_contact_phone"
        android:layout_alignLeft="@id/et_contact_name" />
</RelativeLayout>
